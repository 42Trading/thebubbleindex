<script type="text/javascript" src="//streamone-thebubbleindex.netdna-ssl.com/public/scripts/webglscripts/typeface-0.15.js"></script>

<script type="text/javascript" src="//streamone-thebubbleindex.netdna-ssl.com/public/scripts/webglscripts/three.min.js"></script>

<script type="text/javascript" src="//streamone-thebubbleindex.netdna-ssl.com/public/scripts/webglscripts/OrbitControls.js"></script>
<script type="text/javascript" src="//streamone-thebubbleindex.netdna-ssl.com/public/scripts/webglscripts/Detector.js"></script>
<script type="text/javascript" src="//streamone-thebubbleindex.netdna-ssl.com/public/scripts/webglscripts/helvetiker_regular.typeface.js"></script>

<script type="text/javascript">

if ( ! Detector.webgl ) Detector.addGetWebGLMessage();

var renderer;  
var scene;     
var camera;   
var controls;
var axes;
var model; 
var container;
var rotateX = 0;   
var rotateY = 0;

init();
render();

function animate() {

	requestAnimationFrame(animate);
	controls.update();

}
 
function modelLoadedCallback(geometry) {

	//coloring vertex code based on https://stemkoski.github.io/Three.js/Graphulus-Function.html
	///////////////////////////////////////////////
	// calculate vertex colors based on Z values //
	///////////////////////////////////////////////
	geometry.computeBoundingBox();
	var zMin = geometry.boundingBox.min.z;
	var zMax = geometry.boundingBox.max.z;
	var zRange = zMax - zMin;
	var color, point, face, numberOfSides, vertexIndex;
	// faces are indexed using characters
	var faceIndices = [ 'a', 'b', 'c', 'd' ];
	// first, assign colors to vertices as desired
	for ( var i = 0; i < geometry.vertices.length; i++ ) 
	{
		point = geometry.vertices[ i ];
		color = new THREE.Color( 0x0000ff );
		console.log(zRange);
		var zvalueRel = (zMax - point.z) / zRange;
		if (zvalueRel > 0.97) {

			color.setHSL( 1.0, 1.0, 0.6 );
		}
		else {
			color.setHSL( 0.7 * zvalueRel, 1.0, 0.6 );
		}

		geometry.colors[i] = color; // use this array for convenience
	}
	// copy the colors as necessary to the face's vertexColors array.
	for ( var i = 0; i < geometry.faces.length; i++ ) 
	{
		face = geometry.faces[ i ];
		numberOfSides = ( face instanceof THREE.Face3 ) ? 3 : 4;
		for( var j = 0; j < numberOfSides; j++ ) 
		{
			vertexIndex = face[ faceIndices[ j ] ];
			face.vertexColors[ j ] = geometry.colors[ vertexIndex ];
		}
	}
	///////////////////////
	// end vertex colors //
	///////////////////////



	var material = new THREE.MeshBasicMaterial( { vertexColors: THREE.VertexColors, side: THREE.DoubleSide} );
	

	var object = new THREE.Mesh(geometry, material);
		$BOUNDINGBOXMINIMUM
		$BOUNDINGBOXMAXIMUM
    
		var max = Math.max(boundingBoxMinimum[0], boundingBoxMaximum[0]);
    object.position.set( -boundingBoxMinimum[0], -boundingBoxMinimum[1], -boundingBoxMinimum[2]);

		var scale = $SCALECONSTANT/max;
	  console.log("Loading finished, scaling object by " + scale);
    model = new THREE.Object3D();
    model.add(object);
    model.scale.set(scale,scale,scale);
    rotateX = rotateY = 0;
    scene.add(model);
		render();

}

function render() {
    renderer.render(scene, camera);
}

function init() {
     
	camera = new THREE.PerspectiveCamera(50, window.innerWidth / window.innerHeight, 0.1, 1000);
	camera.position.z = 35;
	camera.up.set( 0, 0, 1 );
	controls = new THREE.OrbitControls( camera );
	controls.damping = 0.5;
	controls.addEventListener( 'change', render );
	scene = new THREE.Scene();

	renderer = new THREE.WebGLRenderer( {  antialias: true   } );
	renderer.setPixelRatio( window.devicePixelRatio );
	renderer.setSize( window.innerWidth, window.innerHeight );
	renderer.setClearColor(0);
	var loader = new THREE.JSONLoader();
	loader.load($JSONFILE, modelLoadedCallback);

	addAxesAndText();
	addTimeSeries();

	container = document.getElementById( 'container' );
	container.appendChild( renderer.domElement );
	window.addEventListener( 'resize', onWindowResize, false );
	animate();

 }
 
 function onWindowResize() {

	camera.aspect = window.innerWidth / window.innerHeight;
	camera.updateProjectionMatrix();

	renderer.setSize( window.innerWidth, window.innerHeight );

	render();

	}
 
 function loadJSON(callback) {   

    var xobj = new XMLHttpRequest();
		xobj.overrideMimeType("application/json");
    xobj.open('GET', $DIRECTIONJSON, true); // Replace 'my_data' with the path to your file
    xobj.onreadystatechange = function () {
			if (xobj.readyState == 4 && xobj.status == "200") {
				// Required use of an anonymous callback as .open will NOT return a value but simply returns undefined in asynchronous mode
				callback(xobj.responseText);
			}
    };
    xobj.send(null);  
 }


	function addTimeSeries() {

		loadJSON(function(response) {
  	// Parse JSON string into object
    var actual_JSON = JSON.parse(response);
		var geometry = new THREE.Geometry();

		var point = new THREE.Vector3();
		var direction = new THREE.Vector3();

		for (var i = 0; i < actual_JSON.size; i++) {

			direction.x = $SIZECONSTANT / actual_JSON.size;
			direction.y = 0;
			direction.z = actual_JSON.vertices[i];

			point.add(direction);
			geometry.vertices.push(point.clone());

		}

		parentTransform = new THREE.Object3D();
				

		for ( var i = 0; i < 1; i ++ ) {

			var type = THREE.LineStrip;
			var object = new THREE.Line( geometry, new THREE.LineBasicMaterial( { color: 0xFFFFFF } ), type );

			object.position.x = i/$SIZECONSTANT;
			object.position.y = 0;
			object.position.z = i/$SIZECONSTANT;

			parentTransform.add( object );

		}

		scene.add( parentTransform );
 		});
	}
 
 function addAxesAndText() {
	
	
	axes = new THREE.AxisHelper( $SIZECONSTANT );
	scene.add( axes );

	 var  textGeo1 = new THREE.TextGeometry('Date', {
		size: 1,
		height: 0,
		curveSegments: 1,
		font: "helvetiker",
		style: "normal"

	});
	
	var  color1 = new THREE.Color();
	color1.setRGB(255, 0, 0);
	var  textMaterial1 = new THREE.MeshBasicMaterial({ color: color1 });
	var  text1 = new THREE.Mesh(textGeo1 , textMaterial1);

	text1.position.x = $XTEXTPOSITION;
	text1.position.y = 0;
	text1.position.z = 0
	text1.rotation.x = Math.PI / 2;
	text1.rotation.y = 0;
	text1.rotation.z = 0;
	scene.add(text1);

	var  textGeo2 = new THREE.TextGeometry('Window', {
			size: 1,
			height: 0,
			curveSegments: 1,
			font: "helvetiker",
			style: "normal"

		});
	var  color2 = new THREE.Color();
	color2.setRGB(0, 255, 0);
	var  textMaterial2 = new THREE.MeshBasicMaterial({ color: color2 });
	var  text2 = new THREE.Mesh(textGeo2 , textMaterial2);

	text2.position.x = 0;
	text2.position.y = $YTEXTPOSITION;
	text2.position.z = 0
	text2.rotation.x = Math.PI / 2;
	text2.rotation.y = Math.PI / 2;
	text2.rotation.z = 0;
	scene.add(text2);

	var  textGeo3 = new THREE.TextGeometry('Value', {
			size: 1,
			height: 0,
			curveSegments: 1,
			font: "helvetiker",
			style: "normal"

		});
	var  color3 = new THREE.Color();
	color3.setRGB(0, 0, 255);
	var  textMaterial3 = new THREE.MeshBasicMaterial({ color: color3 });
	var  text3 = new THREE.Mesh(textGeo3 , textMaterial3);

	text3.position.x = 0;
	text3.position.y = 0;
	text3.position.z = $ZTEXTPOSITION;
	text3.rotation.x = Math.PI / 2;
	text3.rotation.y = Math.PI / 2;
	text3.rotation.z = Math.PI / 2;
	scene.add(text3);
}


</script>
